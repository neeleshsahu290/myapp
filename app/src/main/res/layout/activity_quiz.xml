<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_quiz_background"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizActivity">
    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/appbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyApplication.AppBarOverlay"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            android:background="@drawable/color"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_navigate" />
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/quizlyt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="India capital"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:id="@+id/progressbar"
                    android:minHeight="50dp"
                    android:progress="0"
                    android:indeterminate="false"/>
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColorHint="#7A8089"
                    android:textColor="@color/black"
                    android:text="0/10"
                    android:gravity="center"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txtoptionone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                android:text="Dehli"
                android:textColor="#7A8089"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtoptiontwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                android:text="Banglore"
                android:textColor="#7A8089"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtoptionthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                android:text="kolkata"
                android:textColor="#7A8089"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtoptionfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                android:text="surat"
                android:textColor="#7A8089"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btnsubmit"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_background"
                android:text="Submit"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>


        </LinearLayout>

    </ScrollView>
    <include layout="@layout/progressloading"
        android:id="@+id/progresslyt"
        android:layout_marginTop="?attr/actionBarSize"
        tools:ignore="IncludeLayoutParam" />

</androidx.constraintlayout.widget.ConstraintLayout>